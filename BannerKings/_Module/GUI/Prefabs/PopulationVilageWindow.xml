										<ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button"  />
									</Children>
								</ButtonWidget>
								
								</Children>
							</Widget>
						</Children>
					</ListPanel>
					
				
			
					<TextWidget HorizontalAlignment="Center" HeightSizePolicy="Fixed" SuggestedHeight="25" WidthSizePolicy="CoverChildren" Text="@InfluenceCostText" MarginTop="20" Brush="Encyclopedia.SubPage.Info.Text"/>

