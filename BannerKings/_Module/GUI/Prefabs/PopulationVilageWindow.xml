								<Children>
									<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren"  StackLayout.LayoutMethod="HorizontalLeftToRight" MaxHeight="645" >
										<Children>
								
											<TextWidget HorizontalAlignment="Left" WidthSizePolicy="CoverChildren" Text="Administrative Cost:" MarginTop="10" Brush="Encyclopedia.SubPage.Info.Text"/>

											<TextWidget HorizontalAlignment="Center" WidthSizePolicy="CoverChildren" Text="@AdministrativeCost" MarginTop="10" MarginLeft="5" Brush="TownManagement.Project.Name.Text"/>

										</Children>
									</ListPanel>
								</Children>
							</Widget>
							
							<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" UpdateChildrenStates="true" MarginTop="17" MarginBottom="5" MarginLeft="20" MarginRight="20" >
