					<!--Tendencies Title-->
					<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="20" Brush="Popup.Title.Text" Text="Decisions" MarginTop="35"/>
					
					
